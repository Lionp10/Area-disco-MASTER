@using webAreaMaster.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Title & Favicon -->
    <link rel="icon" type="image/jpg" href="~/Content/assets/images/logoarea.ico" />
    <title>@ViewBag.Title - Sistema area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- DataTables -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/jszip-2.5.0/dt-1.13.4/b-2.3.6/b-colvis-2.3.6/b-html5-2.3.6/b-print-2.3.6/date-1.4.0/kt-2.8.2/r-2.4.1/rg-1.3.1/rr-1.3.3/sc-2.1.1/sb-1.4.2/sp-2.1.2/sl-1.6.2/sr-1.2.2/datatables.min.css" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Extras -->
    <link rel="stylesheet" href="~/Content/style.css">

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/extras")

</head>
<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">

                <ul class="list-unstyled components mb-5">

                    <!-- Section: Inicio -->
                    <li class="active">
                        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa-solid fa-house-chimney"></i> Inicio</a>
                        <ul class="collapse list-unstyled" id="homeSubmenu">
                            <li>
                                <a href="@Url.Action("Index", "Inicio")"><i class="fa-solid fa-chart-simple"></i> Estadísticas</a>
                            </li>
                        </ul>
                    </li>

                    @if (Html.ItsAuthorized("Administrador"))
                    {
                        <!-- Section: Deposito -->
                        <li>
                            <a href="#depSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa-solid fa-boxes-packing"></i> Depósito</a>
                            <ul class="collapse list-unstyled" id="depSubmenu">
                                <li>
                                    <a href="@Url.Action("Cargar", "Deposito")"><i class="fa-solid fa-caret-right"></i> Cargar</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Listado", "Deposito")"><i class="fa-solid fa-caret-right"></i> Modificar</a>
                                </li>
                            </ul>
                        </li>
                    }
                    <!-- Section: Barras -->
                    <li>
                        <a href="#barSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa-solid fa-ruler-horizontal"></i> Barras</a>
                        <ul class="collapse list-unstyled" id="barSubmenu">
                            <li>
                                <a href="@Url.Action("Crear", "Barra")"><i class="fa-solid fa-caret-right"></i> Crear</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Cargar", "Barra")"><i class="fa-solid fa-caret-right"></i> Cargar</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Listado", "Barra")"><i class="fa-solid fa-caret-right"></i> Modificar</a>
                            </li>
                        </ul>
                    </li>

                    @if (Html.ItsAuthorized("Administrador"))
                    {
                        <!-- Section: Usuarios -->
                        <li>
                            <a href="#userSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa-solid fa-users"></i> Usuarios</a>
                            <ul class="collapse list-unstyled" id="userSubmenu">
                                <li>
                                    <a href="@Url.Action("Crear", "Usuarios")"><i class="fa-solid fa-caret-right"></i> Crear</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Listado", "Usuarios")"><i class="fa-solid fa-caret-right"></i> Modificar</a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>

                <div class="footer">
                    <p>
                        Area disco <br />
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> All rights reserved | Sistema desarrollado por <br /> <a href="#" target="_blank">ASD Programming</a>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </p>
                </div>

            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">

                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userNavDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                    @HttpContext.Current.Session["userEmail"].ToString()      
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userNavDropdown">
                                    <a class="dropdown-item" href="@Url.Action("CambiarContrasena", "Acceso")"><i class="bi bi-lock"></i> Cambiar contraseña</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Desconectarse", "Acceso")"><i class="bi bi-power"></i> Desconectarse</a>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Contenido principal -->
            <main>
                @RenderBody()
            </main>

        </div>
    </div>

    @RenderSection("scripts", required: false)

    <!-- Icons: FontAwesome -->
    <script src="https://kit.fontawesome.com/ca747fee9b.js" crossorigin="anonymous"></script>

    <!-- DataTables-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/jszip-2.5.0/dt-1.13.4/b-2.3.6/b-colvis-2.3.6/b-html5-2.3.6/b-print-2.3.6/date-1.4.0/kt-2.8.2/r-2.4.1/rg-1.3.1/rr-1.3.3/sc-2.1.1/sb-1.4.2/sp-2.1.2/sl-1.6.2/sr-1.2.2/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>

    <!-- Extras -->
    <script src="~/Scripts/main.js"></script>



</body>
</html>
